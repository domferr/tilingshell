{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "sourceMap": false,
    "strict": true,
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "paths": {
      "@*": ["./src/*"]
    },
    "experimentalDecorators": true,
  },
  "include": [
    "ambient.d.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
